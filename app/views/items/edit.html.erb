<div class="main">
  <div class="new_item">
    <h1 class="new_item__title">
      商品情報編集
    </h1>
    <div class="new_item__form">
      <div class="new_item__form__input">
        <%= form_with model: @item, local: true do |f|%>
          <div class="input-area">
            <%= f.label :name, "商品名", class: "input-area__title" %>
            <span class = "input-area__required">必須</span><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input-area__text-field" %>
          </div>
        <div class="input-area">
          <%= f.submit "登録", class: "submit-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>