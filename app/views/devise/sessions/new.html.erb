<main class = "signup">
  <h1 class = "signup__title">
    ログイン
  </h1>
  <div class = "signup__form">
    <div class = "signup__form__input">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
        <div class="input-area">
          <%= f.label :email, class: "input-area__title" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-area__text-field" %>
        </div>

        <div class="input-area">
          <%= f.label :password, class: "input-area__title" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "input-area__text-field" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="input-area">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="input-area">
          <%= f.submit "Log in", class: "submit-btn" %>
        </div>
      <% end %>

  <%= render "devise/shared/links" %>
</main>
